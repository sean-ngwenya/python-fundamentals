print("\nOOP - DUNDER METHODS")
print("-" * 70)


# Class demonstrating dunder methods
class Vector:
    def __init__(self, x: int, y: int):  # Initialize vector coordinates
        self.x = x
        self.y = y

    def __repr__(self) -> str:  # Official string representation
        return f"Vector(x={self.x}, y={self.y})"

    def __add__(self, other: "Vector") -> "Vector":  # Vector addition
        return Vector(self.x + other.x, self.y + other.y)

    def __eq__(self, other: object) -> bool:  # Equality check
        if not isinstance(other, Vector):
            return False
        return self.x == other.x and self.y == other.y


# Example usage
if __name__ == "__main__":
    v1 = Vector(2, 3)
    v2 = Vector(1, 4)

    print(v1 + v2)  # Vector addition
    print(v1 == Vector(2, 3))  # Equality check
